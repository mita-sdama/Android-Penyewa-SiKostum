<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="10dp"
                android:id="@+id/gbrBukti"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvIdDetail"
                    android:visibility="gone"
                    android:hint="Id detail"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvTglTransaksi"
                    android:textColor="#4CAF50"
                    android:hint="tgl transaksi"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Sewa : "/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tglsewa"
                        android:hint="tanggal sewa"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Kembali : "/>

                    <TextView
                        android:id="@+id/tglKembali"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="tanggal kembali"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/statusTime"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_access_time_red_24dp"/>

                <TextView
                    android:id="@+id/statusSewa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status sewa :"
                    android:hint="status" />


            </LinearLayout>

        </LinearLayout>




    </LinearLayout>

</android.support.v7.widget.CardView>