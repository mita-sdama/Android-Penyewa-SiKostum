<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_gravity="center"
        android:id="@+id/progressLayout">

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/simpleProgressBarr"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="168dp"
            tools:layout_editor_absoluteY="417dp"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvIdKostum"
        android:visibility="gone"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvIdTempat"
        android:hint="id tempat..."
        android:visibility="gone"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvIdAlamat"
        android:visibility="gone"
        android:hint="id alamat..."/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvNamaKostum"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:hint="nama kostum"/>

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="5dp"
                    android:id="@+id/gambarKostum"
                    android:src="@drawable/kostum_icon"/>

                <TextView
                    android:id="@+id/hargaKostum"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Harga Kostum" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/jumlahKostum" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/deskripsiKostum"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/namaTempatSewa"
                    android:hint="nama tempat sewa"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/alamatTempatSewa"
                android:hint="alamat tempat sewa"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="Kelurahan "/>

                <TextView
                    android:id="@+id/tvDes"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="Kecamatan "/>

                <TextView
                    android:id="@+id/tvKec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    />

            </LinearLayout>


            <TextView
                android:id="@+id/tvKot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="Kota"
                />

            <TextView
                android:id="@+id/tvProv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="Provinsi"
                />

            <Button
                android:layout_gravity="bottom"
                android:id="@+id/btn_navigasi"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_location_on_black_24dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textStyle="bold"
                android:inputType="textCapCharacters"
                android:id="@+id/statusTempat"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:id="@+id/btReview"
                    android:layout_margin="5dp"
                    android:drawableStart="@drawable/ic_comment_black_24dp"
                    android:textColor="#ffffff"
                    android:background="#4CAF50"/>

                <Button
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:id="@+id/btKeranjang"
                    android:drawableStart="@drawable/ic_shopping_cart_black_24dp"
                    android:textColor="#ffffff"
                    android:layout_margin="5dp"
                    android:background="#E91E63"/>



            </LinearLayout>





        </LinearLayout>



    </LinearLayout>


</android.support.v7.widget.CardView>